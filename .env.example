# ==============================================
# YouTube Safe Kids - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# YouTube API Configuration
# Get your key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Search Configuration
# Maximum number of videos returned per search (default: 8)
MAX_SEARCH_RESULTS=8

# Transcription Configuration
# Enable/disable video transcription for NLP filters (default: True)
# When True: NLP filters analyze title + description + transcript
# When False: NLP filters analyze only title + description
ENABLE_VIDEO_TRANSCRIPTION=True
